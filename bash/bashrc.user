# enable ssh-agent and gpg-agent
eval `keychain --eval id_dsa 2> /dev/null`

# ANSI color codes
FGCBLK='[30m' # Black - Foreground
FGCRED='[31m' # Red
FGCGRN='[32m' # Green
FGCYLW='[33m' # Yellow
FGCBLU='[34m' # Blue
FGCPUR='[35m' # Purple
FGCCYN='[36m' # Cyan
FGCWHT='[37m' # White
BGCBLK='[40m' # Black - Background
BGCRED='[41m' # Red
BGCGRN='[42m' # Green
BGCYLW='[43m' # Yellow
BGCBLU='[44m' # Blue
BGCPUR='[45m' # Purple
BGCCYN='[46m' # Cyan
BGCWHT='[47m' # White
TXTRST='[0m'  # Text Reset
TXTBLD='[1m'  # Revert fg and bg color
TXTUND='[4m'  # underline
TXTINV='[7m'  # Revert fg and bg color

PS1="\[$TXTBLD\]\[$TXTINV\]\[$FGCGRN\]\u@\h:\[$TXTRST\]\[$FGCBLU\] \w\\$ \[$TXTRST\]"
PS2="> $RS"

alias ls='ls --color'
alias ll='ls -l'
alias mv='mv -i'
alias rm='rm -i'

alias apt-search='apt-cache search --names-only'
alias apt-policy='apt-cache policy'

alias slideshow='xrandr --output VGA --mode 800x600 --auto'
alias rsync='rsync -e ssh'
alias g='gvim --remote-silent'

genpasswd() {
  local l=$1
  [ -z "$l" ] && l=20
  tr -dc A-Za-z0-9_ < /dev/urandom | head -c ${l} | xargs
}
