if has("gui")
  " over zelous numbers of lines
  set lines=70
  redraw
  " use 85% of max lines or 52, whichever greater
  let &lines = max([float2nr(0.80*&lines),52])

  set co=85
  " double the size of window if running diff
  if &diff
    let &columns = ((&columns * 2 > 160)? 160 : &columns*2)
  endif

  set gfn=monospace\ 12
  set go=ac

  colorscheme desert

  " gui font up/down size
  nnoremap gfk :silent! let &gfn=substitute(&gfn,'\d\+$','\=submatch(0)+1','')<cr>
  nnoremap gfj :silent! let &gfn=substitute(&gfn,'\d\+$','\=submatch(0)-1','')<cr>
endif " has ("gui")

so $MYVIMRC
