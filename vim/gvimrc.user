if has("gui")
  set lines=100  " over zelous numbers of lines
  func Autolines()
    let &lines = max([float2nr(0.90*&lines),30])
  endfunc
  autocmd GUIEnter * call Autolines()

  set co=85
  " double the size of window if running diff
  if &diff
    let &columns = min([&columns * 2, 160])
  endif

  set gfn=monospace\ 12
  set go=ac

  colorscheme desert

  " gui font up/down size
  nnoremap gfk :silent! let &gfn=substitute(&gfn,'\d\+$','\=submatch(0)+1','')<cr>
  nnoremap gfj :silent! let &gfn=substitute(&gfn,'\d\+$','\=submatch(0)-1','')<cr>
endif " has ("gui")

so $MYVIMRC
